<?xml version="1.0" encoding="UTF-8"?>
<!--============================================================
	Deployment Descriptor: web.xml
=============================================================-->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

	<display-name>FinalProject</display-name>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
<!--============================================================
	filter LogInFilter
=============================================================-->
	<filter>
		<filter-name>LogInFilter</filter-name> 
		<filter-class>ua.nure.kosten.FinalTast.web.filter.LogInFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>LogInFilter</filter-name>
		<url-pattern>/index.jsp</url-pattern>
	</filter-mapping>
<!--============================================================
	filter LengFilter
=============================================================-->
	<filter>
		<filter-name>LengFilter</filter-name> 
		<filter-class>ua.nure.kosten.FinalTast.web.filter.LengFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>LengFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
<!--============================================================
	filter AdmCheck
=============================================================-->
	<filter>
		<filter-name>AdmCheck</filter-name> 
		<filter-class>ua.nure.kosten.FinalTast.web.filter.AdmCheck</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>AdmCheck</filter-name>
		<url-pattern>/WEB-INF/jsp/adm/*</url-pattern>
	</filter-mapping>
	
</web-app>